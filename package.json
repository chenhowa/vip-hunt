{
  "name": "rts",
  "version": "0.0.0",
  "description": "OSU Capstone project. VIP-style RTS",
  "main": "main.js",
  "scripts": {
    "test": "nyc mocha", 
    "lint": "tslint src/**/*.ts",
    "lint:fix": "tslint src/**/*.ts --fix",
    "live-reload": "live-reload --port 8000 dist/js/bundle.js",
    "build": "tsc && browserify ./dist/js/controller/main.js -o ./dist/js/bundle.js -d",
    "build:watch": "npm run build && onchange 'src/**/*.ts' -- npm run build",
    "serve": "http-server dist -c-1",
    "serve:watch": "npm-run-all -p live-reload serve"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "html"
    ],
    "exclude": [
        "dist",
        "src2",
        "coverage",
        "**/*.d.ts"
    ],
    "require": [
        "ts-node/register"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "all": true
  },
  "keywords": [
    "rts",
    "vip",
    "phaser"
  ],
  "author": "Lucile Behmer, Howard Chen, Mark Ruoff",
  "license": "MIT",
  "dependencies": {
    "@types/chai": "^4.1.2",
    "@types/es6-shim": "^0.31.35",
    "@types/lodash": "^4.14.94",
    "@types/mocha": "^2.2.47",
    "chai": "^4.1.2",
    "http-server": "^0.11.1",
    "inversify": "^4.9.0",
    "lodash": "^4.17.4",
    "mocha": "^5.0.0",
    "nodemon": "^1.14.11",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "reflect-metadata": "^0.1.12",
    "rxjs-es": "^5.0.0-beta.12",
    "sinon": "^4.2.1",
    "source-map-support": "^0.5.2",
    "ts-node": "^4.1.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.6.2",
    "watch": "^1.0.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chenhowa/vip-hunt"
  },
  "devDependencies": {
    "browserify": "^15.2.0",
    "live-reload": "^1.1.0",
    "onchange": "^3.3.0",
    "tslint": "^5.9.1"
  }
}
