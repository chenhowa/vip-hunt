{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6", "dom"],
        "types": ["reflect-metadata", "src/custom_types/wade.d.ts"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist/js",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "noImplicitUseStrict": true,
        "noEmitOnError": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*"
    ]
}
